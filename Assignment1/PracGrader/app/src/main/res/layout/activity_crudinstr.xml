<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CRUDInstrActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/instAddToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="CRUD Instructor"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/editTextInstrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instAddToolBar" />

    <EditText
        android:id="@+id/editTextInstrEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/editTextInstrName"
        app:layout_constraintStart_toStartOf="@+id/editTextInstrName"
        app:layout_constraintTop_toBottomOf="@+id/editTextInstrName" />

    <EditText
        android:id="@+id/editTextInstrUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextInstrEmail"
        app:layout_constraintStart_toStartOf="@+id/editTextInstrEmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextInstrEmail" />

    <EditText
        android:id="@+id/editTextInstrPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextInstrUsername"
        app:layout_constraintStart_toStartOf="@+id/editTextInstrUsername"
        app:layout_constraintTop_toBottomOf="@+id/editTextInstrUsername" />

    <EditText
        android:id="@+id/editTextInstrCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Country"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextInstrPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextInstrPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextInstrPassword" />

    <Button
        android:id="@+id/buttonAddInstructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Add Instructor"
        app:layout_constraintEnd_toEndOf="@+id/editTextInstrCountry"
        app:layout_constraintStart_toStartOf="@+id/editTextInstrCountry"
        app:layout_constraintTop_toBottomOf="@+id/editTextInstrCountry" />

</androidx.constraintlayout.widget.ConstraintLayout>