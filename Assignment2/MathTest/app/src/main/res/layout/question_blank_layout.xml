<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textBlankQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Question  Number X"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBlankQuestionQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="question: ???"
        app:layout_constraintEnd_toEndOf="@+id/textBlankQuestionNumber"
        app:layout_constraintStart_toStartOf="@+id/textBlankQuestionNumber"
        app:layout_constraintTop_toBottomOf="@+id/textBlankQuestionNumber" />

    <Button
        android:id="@+id/buttonBlankQuestionPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFEB3B"
        android:text="pass"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBlankQuestionQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#F44336"
        android:text="quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textBlankQuestionMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mark : 20"
        app:layout_constraintEnd_toEndOf="@+id/textBlankQuestionQuestion"
        app:layout_constraintStart_toStartOf="@+id/textBlankQuestionQuestion"
        app:layout_constraintTop_toBottomOf="@+id/textBlankQuestionQuestion" />

    <EditText
        android:id="@+id/editTextBlankQuestionAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textBlankQuestionMark"
        app:layout_constraintStart_toStartOf="@+id/textBlankQuestionMark"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBlankQuestionAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Answer"
        app:layout_constraintEnd_toEndOf="@+id/editTextBlankQuestionAnswer"
        app:layout_constraintStart_toStartOf="@+id/editTextBlankQuestionAnswer"
        app:layout_constraintTop_toBottomOf="@+id/editTextBlankQuestionAnswer" />

    <TextView
        android:id="@+id/textBlankTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="60"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textBlankQuestionMark"
        app:layout_constraintStart_toStartOf="@+id/textBlankQuestionMark"
        app:layout_constraintTop_toBottomOf="@+id/textBlankQuestionMark" />
</androidx.constraintlayout.widget.ConstraintLayout>