<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarketActivity">

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Leave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMyEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="My Equipment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textWilderness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Market"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textWilderness"
        app:layout_constraintStart_toStartOf="@+id/textWilderness"
        app:layout_constraintTop_toBottomOf="@+id/textWilderness" />

    <TextView
        android:id="@+id/textItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="Price: 100"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textListNum"
        app:layout_constraintTop_toBottomOf="@+id/textItemName" />

    <TextView
        android:id="@+id/textItemMass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mass: 100"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textItemPrice"
        app:layout_constraintStart_toEndOf="@+id/textListNum" />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Prev"
        app:layout_constraintBaseline_toBaselineOf="@+id/textListNum"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Buy"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textItemName"
        app:layout_constraintStart_toStartOf="@+id/textItemName"
        app:layout_constraintTop_toBottomOf="@+id/textItemMass" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="Next"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPrev"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textListNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1/3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textItemName"
        app:layout_constraintStart_toStartOf="@+id/textItemName"
        app:layout_constraintTop_toBottomOf="@+id/textItemName" />

    <TextView
        android:id="@+id/textMarketCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="cash: 50"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLeave"
        app:layout_constraintStart_toEndOf="@+id/btnLeave" />

    <TextView
        android:id="@+id/textMarketHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Health: 100"
        app:layout_constraintBaseline_toBaselineOf="@+id/textMarketCash"
        app:layout_constraintStart_toEndOf="@+id/btnPrev" />

    <TextView
        android:id="@+id/textMarketMass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Equipment Mass: 1.8"
        app:layout_constraintBaseline_toBaselineOf="@+id/textMarketHealth"
        app:layout_constraintStart_toEndOf="@+id/btnBuy" />
</androidx.constraintlayout.widget.ConstraintLayout>